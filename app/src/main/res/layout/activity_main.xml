<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="end"
        android:text="0"
        android:textSize="54sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView"
        android:layout_above="@id/androidx.appcompat.widget.AppCompatButtonEquals"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/number_bg"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".2"
            android:textSize="36sp"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/number_bg"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".2"
            android:textSize="36sp"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/number_bg"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".2"
            android:textSize="36sp"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButtonPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/number_bg"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".5"
            android:textSize="36sp"
            android:text="+" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/number_bg"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".5"
            android:textSize="36sp"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".5"
            android:background="@drawable/number_bg"
            android:textSize="36sp"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/number_bg"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".5"
            android:textSize="36sp"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButtonMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/number_bg"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".5"
            android:textSize="36sp"
            android:text="-" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/number_bg"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".5"
            android:textSize="36sp"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/number_bg"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".5"
            android:textSize="36sp"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/number_bg"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".5"
            android:textSize="36sp"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButtonMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/number_bg"
            android:layout_columnWeight="1"
            android:layout_rowWeight=".5"
            android:textSize="36sp"
            android:text="x" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButtonClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_rowWeight=".8"
            android:textSize="36sp"
            android:background="@color/material_dynamic_neutral50"
            android:text="CLEAR"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButton0"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/number_bg"
            android:textSize="36sp"
            android:layout_columnWeight="1"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/androidx.appcompat.widget.AppCompatButtonDivide"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/number_bg"
            android:textSize="36sp"
            android:layout_columnWeight="1"
            android:text=":" />

    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/androidx.appcompat.widget.AppCompatButtonEquals"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="8dp"
        android:textSize="64sp"
        android:background="@color/orange"
        android:layout_alignParentBottom="true"
        android:textColor="@color/material_dynamic_neutral20"
        android:text="="
        />

</RelativeLayout>
